<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.supcon.mes.mbap.view.CustomAdView
        android:id="@+id/workCustomAd"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:tag="workCustomAd" />

    <com.supcon.mes.module_main.ui.view.CustomHorizontalSearchTitleBar
        android:id="@+id/searchTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:tag="searchTitleBar"
        app:title_background_color="@color/transparent"
        app:title_right_btn_need="false"
        app:title_text="移动设备管理" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/workCustomAd"
        android:background="@color/white"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/waitDealtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:tag="waitDealtLayout">

                <include
                    android:id="@+id/hs_wait_title"
                    layout="@layout/hs_item_work_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/waitDealtRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:tag="waitDealtRecycler"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

            <include
                android:id="@+id/hs_work_title"
                layout="@layout/hs_item_work_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/score_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/rankTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="rankTitle"
                    android:text="绩效排名"
                    android:textColor="#849ea4"
                    android:textSize="@dimen/fontSize_16sp" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/rankTitle"
                    android:tag="rank"
                    android:text="5"
                    android:textColor="#5b959e"
                    android:textSize="@dimen/fontSize_18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_toRightOf="@id/rank"
                    android:tag="scoreTitle"
                    android:text="个人绩效"
                    android:textColor="#849ea4"
                    android:textSize="@dimen/fontSize_16sp" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/scoreTitle"
                    android:tag="score"
                    android:text="90"
                    android:textColor="#5b959e"
                    android:textSize="@dimen/fontSize_18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/workRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:tag="workRecycler"
                tools:ignore="UnusedAttribute" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
