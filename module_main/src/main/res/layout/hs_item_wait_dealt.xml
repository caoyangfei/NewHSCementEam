<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/waitDealtIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_work"
            android:tag="waitDealtIcon" />

        <LinearLayout
            android:id="@+id/waitDealtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/waitDealtIcon"
            android:orientation="vertical"
            android:tag="waitDealtContent">

            <TextView
                android:id="@+id/waitDealtEamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:tag="waitDealtEamName"
                android:textColor="#333333"
                tools:text="制成三线水泥" />

            <TextView
                android:id="@+id/waitDealtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:tag="waitDealtTime"
                android:textColor="#757575"
                tools:text="2019-07-24  09:27" />
        </LinearLayout>

        <TextView
            android:id="@+id/waitDealtEamState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/waitDealtEntrust"
            android:padding="@dimen/dp_5"
            android:tag="waitDealtEamState"
            tools:text="待验收" />

        <ImageView
            android:id="@+id/waitDealtEntrust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_entrust"
            android:tag="waitDealtEntrust" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/waitDealtContent"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#d9d9d9" />
    </RelativeLayout>


</LinearLayout>