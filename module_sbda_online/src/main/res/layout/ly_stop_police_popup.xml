<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:text="运行记录"
        android:gravity="center_vertical"
        android:background="@color/themeColor"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/fontSize_15sp"
        android:layout_height="@dimen/dp_40" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="wrap_content">
        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemStopPoliceStopType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceStopType"
            app:editable="true"
            app:key_size="14"
            app:text="停机类别" />


        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemStopPoliceStopReason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceStopReason"
            app:editable="true"
            app:key_size="14"
            app:text="停机原因" />

        <com.supcon.mes.mbap.view.CustomEditText
            android:id="@+id/itemStopPoliceStopExplain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceStopExplain"
            app:key="停机说明"
            app:key_size="14" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemStopPoliceEamIds"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceEamIds"
            app:editable="true"
            app:key="辅机设备"
            app:key_size="14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:layout_width="@dimen/dp_60"
            android:text="保存"
            android:id="@+id/btn_stop_police_save"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:background="@color/themeColor"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <TextView
            android:text="取消"
            android:background="@color/themeColor"
            android:gravity="center"
            android:id="@+id/btn_stop_police_cancel"
            android:layout_width="@dimen/dp_60"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>